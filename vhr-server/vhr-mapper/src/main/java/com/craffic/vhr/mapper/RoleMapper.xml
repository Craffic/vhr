<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.craffic.vhr.mapper.RoleMapper">

    <resultMap id="BaseResultMap" type="com.craffic.vhr.model.Role" >
        <id column="id" property="id" jdbcType="INTEGER" />
        <result column="name" property="name" jdbcType="VARCHAR" />
        <result column="nameZh" property="nameZh" jdbcType="VARCHAR" />
    </resultMap>

    <select id="getHrRolesById" parameterType="java.lang.Integer" resultType="com.craffic.vhr.model.Role">
        SELECT r.* FROM hr h LEFT JOIN hr_role hr on h.id = hr.hrid LEFT JOIN role r ON r.id = hr.rid where h.id = #{hrId,jdbcType=INTEGER}
    </select>

    <insert id="insert" parameterType="com.craffic.vhr.model.Role" >
        insert into role (id, name, nameZh)
        values (#{id,jdbcType=INTEGER}, #{name,jdbcType=VARCHAR}, #{nameZh,jdbcType=VARCHAR}
               )
    </insert>

    <select id="getAllRoles" resultMap="BaseResultMap">
        select * from role;
    </select>

    <delete id="deleteByPrimaryKey" parameterType="java.lang.Integer" >
        delete from role
        where id = #{id,jdbcType=INTEGER}
    </delete>
</mapper>